<%- include("partials/header.ejs") %>

  <div class="container-check">

    <h1 class="title-check">Registar Artigo</h1>
    <hr class="linha">

    <!-- Formulário de Registro de Artigos -->
    <form action="/registoArtigo" method="POST" enctype="multipart/form-data">

      <div class="mb-3 ">
        <label for="nome_art" class="form-label">Nome do Artigo</label>
        <input type="text" class="form-control" id="nome_art" name="nome_art" required>
      </div>

      <div class="mb-3 ">
        <label for="img" class="form-label">Imagem do Artigo</label>
        <input type="file" class="form-control" id="img" name="img" accept="image/*" required>
      </div>

      <div class="mb-3 ">
        <label for="preco" class="form-label">Preço (€)</label>
        <input type="number" step="0.01" class="form-control" id="preco" name="preco" required>
      </div>

      <div class="mb-3 ">
        <label for="quantidade" class="form-label">Quantidade</label>
        <input type="number" class="form-control" id="quantidade" name="quantidade" required>
      </div>

      <div class="mb-3 ">
        <label for="descricao" class="form-label">Descrição</label>
        <textarea class="form-control" id="descricao" name="descricao" rows="4" required></textarea>
      </div>

      <div class="mb-3 ">
        <label for="categoria" class="form-label">Categoria</label>
        <select class="form-select form-control" id="categoria" name="cat_id" required>
          <% for (i=0; i < total; i++){ %>
            <option value="<%= categoria[i].cat_id %>">
              <%= categoria[i].cat_nome %>
            </option>
            <% } %>
        </select>
      </div>

      <div class="button-check">
        <button class="btn-primary " type="submit">Registrar Artigo</button>
      </div>
    </form>

  </div>

<%- include("partials/footer.ejs") %>