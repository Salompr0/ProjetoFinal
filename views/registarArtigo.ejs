<%- include("partials/header.ejs") %>

<div class="container-registo">

  <div class="lado-esquerdo"></div>

   <!--<div class="ficheiro">
    <img class="border1" src="img/8.jpg" width="500" ><input type="hidden" name="nome_foto" value="">
  </div>-->

 <div class="ficheiro2">
    <div class="border1">
      <img class="nova-img" src="img/8.jpg" ><input type="hidden" name="nome_foto" value="">
    </div>
  </div>

  <div class="lado-direito">

    <div class="registo2">

      <h1 class="title">Registar Artigo</h1>
      <hr class="linha">

      <!-- Formulário de Registro de Artigos -->
      <form action="/registoArtigo" method="POST" enctype="multipart/form-data">

        <div class="mb-3 form-group">
          <label for="categoria" class="form-label">Categoria</label>
          <select class="form-select" id="categoria" naform-controlme="cat_id" required>
            <% //categorias.forEach(function(categoria) { %>
              <option value="<%= //categoria.cat_id %>"><%= //categoria.cat_nome %></option>
            <% //}) %>
          </select>
        </div>

        <div class="mb-3 form-group">
          <label for="nome_art" class="form-label">Nome do Artigo</label>
          <input type="text" class="form-control" id="nome_art" name="nome_art" required>
        </div>

        <div class="mb-3 form-group">
          <label for="img" class="form-label">Imagem do Artigo</label>
          <input type="file" class="form-control" id="img" name="img" accept="image/*" required>
        </div>

        <div class="mb-3 form-group">
          <label for="preco" class="form-label">Preço (€)</label>
          <input type="number" step="0.01" class="form-control" id="preco" name="preco" required>
        </div>

        <div class="mb-3 form-group">
          <label for="quantidade" class="form-label">Quantidade</label>
          <input type="number" class="form-control" id="quantidade" name="quantidade" required>
        </div>

        <div class="mb-3 form-group">
          <label for="descricao" class="form-label">Descrição</label>
          <textarea class="form-control" id="descricao" name="descricao" rows="4" required></textarea>
        </div>

        <div class="button-login">
          <button type="submit" class="btn btn-primary">Registrar Artigo</button>
        </div>
      </form>
    </div>
  </div>
</div>

