<%- include("partials/header.ejs") %>

<div class="container-registo">

  <div class="lado-esquerdo"></div>

  <div class="lado-direito">
    <div class="registo2">
    <h1 class="title">Registar Novo Artigo</h1>
    <hr class="linha">

      <form action="/registoArtigo" method="post" enctype="multipart/form-data">

        <div class="mb-3 form-group">
          <label for="nome_art" class="form-label">Nome do Artigo</label>
          <input type="text" class="form-control" id="nome_art" name="nome_art" required>
        </div>

        <div class="mb-3 form-group"><!--multer-->
          <label for="img" class="form-label">Imagem do Artigo</label><!--multer-->
          <input type="file" class="form-control" id="img" name="imgFile" accept="image/*" required>
        </div>

        <div class="mb-3 form-group">
          <label for="preco" class="form-label">Preço (0.00€)</label>
          <input type="number" step="0.01" class="form-control" id="preco" name="preco" min="0" required>
        </div>

        <div class="mb-3 form-group">
          <label for="quantidade" class="form-label">Quantidade</label>
          <input type="number" class="form-control" id="quantidade" name="quantidade" min="0" required>
        </div>

        <div class="mb-3 form-group">
          <label for="descricao" class="form-label">Descrição</label>
          <textarea class="form-control" id="descricao" name="descricao" rows="4" required></textarea>
        </div>

        <div class="mb-3 form-group">
          <label for="categoria" class="form-label">Categoria</label>
          <select class="form-select form-control" id="categoria" name="cat_id" required>
            <% for (i = 0; i < total; i++){ %> 
              <option value="<%= categoria[i].cat_id %>">
                <%= categoria[i].cat_nome %>
              </option>
            <% } %>
          </select>
        </div>

        <div class="button-check">
          <button type="submit" class="btn-primary">Registrar Artigo</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>