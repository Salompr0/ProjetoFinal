<%- include("partials/header.ejs") %>

<div class="artigo">
  <div class="row">
    <div class="col-md-6">
      <!-- Imagem do artigo -->
      <img src="img/<%= artigos.img %>" class="img-fluid" alt="<%= artigos.nome %>">
    </div>

    <div class="col-md-6">
      <!-- Detalhes do artigo -->
      <h1><%= artigos.nome %></h1>
      <p class="preco"><%= artigos.preco %> €</p>
      
      <p class="descricao"><%= artigos.descricao %></p>

      <!-- Botão para adicionar ao carrinho -->
        <% if(artista === artigos.user_id) {%>
          <a href="/editarArtigo/<%= artigos.art_id %>">
            <button>
              Editar artigo
            </button>
          </a>
      <% } else {%>
        <form action="/adicionarCarrinho/<%= artigos.art_id %>" method="POST">
          <button type="submit" class="btn btn-primary my-3">Adicionar ao Carrinho</button>
        </form>
      <% } %>
      <!-- Outras informações sobre o artigo -->
      <h5>Informações adicionais</h5>
      <ul>
        <li><strong>Artista:</strong> <%= artigos.user_id %></li>
        <li><strong>Quantidade:</strong> <%= artigos.quantidade %></li>
      </ul>

    </div>
  </div>

<%- include("partials/footer.ejs") %>