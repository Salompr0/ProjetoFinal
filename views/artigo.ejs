<%- include("partials/header.ejs") %>

<div class="container my-5">
  <div class="row">
    <div class="col-md-6">
      <!-- Imagem do artigo -->
      <img src="<%= artigoEscolhido.img %>" class="img-fluid" alt="<%= artigoEscolhido.titulo %>">
    </div>

    <div class="col-md-6">
      <!-- Detalhes do artigo -->
      <h1><%= artigoEscolhido.titulo %></h1>
      <p class="preco"><%= artigoEscolhido.preco %> €</p>
      <p class="descricao"><%= artigoEscolhido.descricao %></p>

      <!-- Botão para adicionar ao carrinho -->
      <a href="#" class="btn btn-primary my-3">Adicionar ao Carrinho</a>

      <!-- Outras informações sobre o artigo -->
      <h5>Informações adicionais</h5>
      <ul>
        <li><strong>Artista:</strong> <%= artigoEscolhido.user_id %></li>
        <li><strong>Categoria:</strong> <%= artigoEscolhido.categoria %></li>
        <li><strong>Quantidade:</strong> <%= artigoEscolhido.quantidade %></li>
      </ul>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>