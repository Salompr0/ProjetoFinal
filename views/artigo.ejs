<%- include("partials/header.ejs") %>

<div class="container artigo">
  <div class="row">
    <div class="col-md-6">
      <!-- Imagem do artigo -->
      <img src="<%= artigos.img %>" class="img-fluid" alt="<%= artigos.nome %>">
    </div>

    <div class="col-md-6">
      <!-- Detalhes do artigo -->
      <h1><%= artigos.nome %></h1>
      <p class="preco"><%= artigos.preco %> €</p>
      
      <p class="descricao"><%= artigos.descricao %></p>

      <!-- Botão para adicionar ao carrinho -->
      <% for (i = 0; i < totalUsers; i ++) { %>
        <% if(users[i].user_id === artigos.user_id) {%>
          <a href="/registoArtigo">
            <button>
              Editar artigo
            </button>
          </a>
          <% }} %>
            <a href="/compra" class="btn btn-primary my-3">Adicionar ao Carrinho</a>
  
      <!-- Outras informações sobre o artigo -->
      <h5>Informações adicionais</h5>
      <ul>
        <li><strong>Artista:</strong> <%= artigos.user_id %></li>
        <li><strong>Quantidade:</strong> <%= artigos.quantidade %></li>
      </ul>
    </div>
  </div>

<%- include("partials/footer.ejs") %>