<%- include("partials/header.ejs") %>

  <div class="artigo">
    <div class="row">
      <div class="col-md-6">
        <!-- Imagem do artigo -->
        <img src="/uploads/<%= artigos.img %>" class="img-artista" alt="<%= artigos.nome %>">
      </div>

      <div class="col-md-6 info">
        <!-- Detalhes do artigo -->
        <h1>
          <%= artigos.nome %>
        </h1>

        <p class="descricao">
          <%= artigos.descricao %>
        </p>

        <p class="preco">€ <%= artigos.preco %>
        </p>

        <!-- Outras informações sobre o artigo -->
        <h5>Informações adicionais</h5>
        <ul>
          <li><strong>Artista:</strong>
            <%= artigos.user_id %>
          </li>
          <li><strong>Quantidade:</strong>
            <%= artigos.quantidade %>
          </li>
        </ul>

        <div class="botoes">
          <!-- Botão para adicionar ao carrinho -->
          <% if(artista===artigos.user_id) {%>
            <a href="/editarArtigo/<%= artigos.art_id %>">
              <button class="btn-primary my-3">Editar artigo</button>
            </a>
            <% } else {%>

              <!-- Botão para adicionar ao carrinho -->
              <form action="/adicionarCarrinho/<%= artigos.art_id %>" method="POST">
                <button type="submit" class="btn-primary my-3">Adicionar ao Carrinho</button>
              </form>
                    <% } %>
                <!-- Botão para apagar artigo FAZER!!! (acessível vendedor e administrador)-->
                <% if(utilizador.administrador===true || artista===artigos.user_id) {%>
                  <button class="btn-primary adm">
                    <a href="/apagarArtigo/<%= artigos.art_id %> " class="">Apagar artigo</a>
                  </button>
                  <% } %>
        </div>
      </div>
    </div>

    <%- include("partials/footer.ejs") %>