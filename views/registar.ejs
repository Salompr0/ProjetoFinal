<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LogArte</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/main.css">
</head>
<body>
<main class="container-registo">
    <div class="lado-esquerdoR">    
        <img src="img/fundo.jpg" alt="Pintura de fundo" class="imagem">
    </div>
    <!--Adicionar Foto-->
    <div class="ficheiro">
        <img class="foto" src="img/*" width="200" ><input type="hidden" name="nome_foto" value="">
    </div>
    
    <div class="lado-direitoR">

        <div class="registo">
        <h1 class="title">Crie a sua conta</h1>
        <hr class="linha">

            <form action="/registar" method="post" enctype="multipart/form-data">
                <div class="checkbox">
                    <label for="vendedor">Vendedor</label>
                    <input type="checkbox" name="vendedor" id="vendedor"><br>
                </div> 

                <div class="form-group">
                    <label for="email">Nome</label>
                    <input type="text" name="nome" placeholder="Insira seu nome" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email"  name="email" placeholder="Insira seu email" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="telemovel">Telemóvel</label>
                    <input type="tel"  name="telemovel" placeholder="Insira seu número" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="morada">Morada</label>
                    <input type="text"  name="morada" placeholder="Insira sua morada" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="nif">Nif</label>
                    <input type="text"  name="nif" placeholder="Insira seu nif" class="form-control" required>
                </div>

                <div class="form-group" id="qualificacao" hidden>
                    <label>Qualificações</label>
                    <textarea type="text"  name="qualificacao" placeholder="Insira suas qualificações" class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <label for="password">Senha</label>
                    <input type="password" name="password" placeholder="Insira sua senha" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="img" >Foto</label>
                    <input class="form-control" type="file" name="imgFile" accept="image/*" width="20">
                </div>

                <div class="button-check">
                    <button class="btn-primary" type="submit">Registar</button>
                </div>
              
            </form>
        </div> 
    </div>

<script>
 var checkbox = document.querySelector("input[id=vendedor]");

 var imagem = document.querySelector("input[id=file-button]");
 
 checkbox.addEventListener('change', function(){
    if (this.checked){
        document.getElementById("qualificacao").removeAttribute("hidden");
        vendedor.value = true;
    } else {
        document.getElementById("qualificacao").setAttribute("hidden", true);
        qualificacao.value = null;
    }
 });
</script>
</head>
