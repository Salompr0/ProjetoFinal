<%- include("partials/header.ejs") %>

<div class="container-check">
  <h1 class="title-check">Meu Carrinho</h1>
  <hr class="linha">
  
  <table class="table">
    <thead>
      <tr>
        <th>Produto</th>
        <th>Quantidade</th>
        <th>Preço Unitário</th>
        <th>
          <div>Subtotal</div>
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% //pedidos.forEach(item => { %>
        <tr>
          <td> 
            <div class="img-car">
              <a href="/artigo/3"><!--/artigo/:id-->
                <img src="/img/8.jpg" width="150"  alt="Pintura Agapórnis">
              </a>
              <p>Pintura Agapórnis</p>
              <%= //item.nome_art %>
            </div>
          </td>
          <td>
            <div class="quantidade">
              <%= //item.quantidade %>1
            </div>
          </td>
          <td>
            <div class="precoUn">
              € <%= //item.preco.toFixed(2) %>
            </div>
          </td>
          <td>
            <div class="sub">
              € <%= //(item.quantidade * item.preco).toFixed(2) %>
            </div>
          </td>
          <td>
            <div class="remover">
              <a href="/removerCarrinho">
                <img src="/img/remover.png" width="25" alt="lixo">
              </a>
            </div>
          </td>
        </tr>
      <% //}) %>
    </tbody>
  </table>
  
  <div class=" finalizar">
    <h4>Total:  € <%= //total.toFixed(2) %></h4>
    <a href="/checkout">
    <button class="btn-primary">Finalizar Compra</button>
    </a>
  </div>
</div>

<%- include("partials/footer.ejs") %>
