<%- include("partials/header.ejs") %>

<div class="container my-5 compra">
  <h1 class="mb-4 ">Meu Carrinho</h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>Produto</th>
        <th>Quantidade</th>
        <th>Preço Unitário</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% //pedidos.forEach(item => { %>
        <tr>
          <td>
            <%= //item.nome_art %>
            <a href="/artigo/3"><!--/artigo/:id-->
              <img src="/img/8.jpg" width="100" alt="Pintura Agapórnis">
            </a>
            <p>Pintura Agapórnis</p>
          </td>
          <td><%= //item.quantidade %>1</td>
          <td>€ 180,00<%= //item.preco.toFixed(2) %></td>
          <td>€ 180,00<%= //(item.quantidade * item.preco).toFixed(2) %></td>
        </tr>
      <% //}) %>
    </tbody>
  </table>
  
  <div class="text-end finalizar">
    <h4 class="total">Total:  € 180,00<%= //total.toFixed(2) %></h4>
    <a href="/checkout" class="btn btn-primary ">Finalizar Compra</a>
  </div>
</div>

<%- include("partials/footer.ejs") %>
